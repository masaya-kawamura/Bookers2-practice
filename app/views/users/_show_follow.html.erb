<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザー情報とユーザー編集ページへのリンク-->
      <%= render 'users/user', user: @user %>
      <!--本の投稿フォーム、books/_book.html.erbファイル-->
      <%= render 'books/book' %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2><%= @title %></h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user.id) do %>
              <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: 'no_image.jpeg', size: '40x40' %>
              <% end %>
              </td>
            <td><%= user.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>