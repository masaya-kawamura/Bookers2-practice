<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザー情報とユーザー編集ページへのリンク-->
      <%= render 'users/user', user: @user %>
      <!--本の投稿フォーム、books/_book.html.erbファイル-->
      <%= render 'books/book' %>
    </div>

    <!--ユーザー一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image,format:"jpeg", fallback: "no_image.jpeg", size: "40x40" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>