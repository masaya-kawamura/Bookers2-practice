<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザー情報とユーザー編集ページへのリンク-->
      <%= render 'users/user', user: @user %>
      <!--本の投稿フォーム、books/_book.html.erbファイル-->
      <%= render 'books/book' %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
              <%= attachment_image_tag @book.user, :profile_image,format:"jpeg", fallback: "no_image.jpeg", size: "40x40" %><br/>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "本当に消しますか？"}, class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <!--ここからコメント-->
      <h4>comments(<%= @book.comments.count %>)</h4>
      <table class="table">
        <thead>
          <tr>
            <th>user</th>
            <th>comment</th>
            <th></th>
          </tr>
        </thead>
        <% @book.comments.each do |comment| %>
        <tr>
          <td>
            <%= link_to user_path(comment.user.id) do %>
            <%= attachment_image_tag comment.user, :profile_image, format:'jpeg', fallback: 'no_image.jpeg', size: "40x40" %><br/>
            <%= comment.user.name %>
            <% end %>
          </td>
          <td ><%= comment.comment %></td>
          <% if comment.user.id == current_user.id %>
          <td><%= link_to "Destroy", book_comment_path(comment.book.id,comment.id), method: :delete, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
        <% end %>
      </table>

      <!--ここからコメント投稿機能-->
      <%= form_with model:[@book, @comment], local:true do |f| %>
      <%= f.text_area :comment %><br/>
      <%= f.submit "送信する" %>
      <% end %>
    </div>
  </div>
</div>